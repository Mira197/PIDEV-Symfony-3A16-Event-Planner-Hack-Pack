            <p>You will receive a confirmation email shortly.</p>
            <a href="{{ path('aya_cart') }}" class="btn btn-outline-secondary">Back to Cart</a>
            <a href="{{ path('app_services') }}" class="btn btn-primary">Continue Shopping</a>
        </div>
    </div>
{% endblock %}
