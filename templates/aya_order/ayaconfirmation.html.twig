{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .confirmation-container {
            margin: 150px auto;
            max-width: 700px;
            text-align: center;
            padding: 60px 40px;
            background-color: #fff;
            border-radius: 20px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        }

        .confirmation-container h2 {
            font-size: 2rem;
            color: #5e2a5b;
            margin-bottom: 20px;
        }

        .confirmation-container p {
            font-size: 1.1rem;
            color: #555;
        }

        .confirmation-container .btn {
            margin-top: 30px;
            padding: 10px 30px;
            border-radius: 8px;
        }

        .confirmation-icon {
            font-size: 50px;
            color: #28a745;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="confirmation-container">
            <div class="confirmation-icon">âœ…</div>
            <h2>Thank you for your order!</h2>
