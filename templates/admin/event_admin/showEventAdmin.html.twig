{% extends 'admin/baseAdmin.html.twig' %}
{% block title %}Event Details
{% endblock %}

{% block section %}
	<div class="container mt-5">
		<h2 class="mb-4">Event Details</h2>

		<div class="card p-4 shadow-sm">
			<div class="row align-items-center">
				<div
					class="col-md-4">
					{#{% if event.imageFilename %}
					                    <img src="{{ asset('uploads/' ~ event.imageFilename) }}" alt="{{ event.name }}" class="img-fluid rounded">
					                {% elseif base64Image is defined and base64Image %}
					                    <img src="data:image/jpeg;base64,{{ base64Image }}" alt="{{ event.name }}" class="img-fluid rounded">
					                {% else %}
					                    <p>No image available</p>
					                {% endif %}#}
					{% if event.base64Image %}
						<img src="data:image/jpeg;base64,{{ event.base64Image }}" alt="{{ event.name }}" class="img-fluid rounded">
					{% elseif event.imageFilename %}
						<img src="{{ asset('uploads/' ~ event.imageFilename) }}" alt="{{ event.name }}" class="img-fluid rounded">
					{% else %}
						<p>No image available</p>
					{% endif %}
				</div>
				<div class="col-md-8">
					<table class="table">
						<tbody>
							<tr>
								<th>Name</th>
								<td>{{ event.name }}</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ event.description }}</td>
							</tr>
							<tr>
								<th>City</th>
								<td>{{ event.city }}</td>
							</tr>
							<tr>
								<th>Capacity</th>
								<td>{{ event.capacity }}</td>
							</tr>
							<tr>
								<th>Start Date</th>
								<td>{{ event.startDate|date('Y-m-d H:i') }}</td>
							</tr>
							<tr>
								<th>End Date</th>
								<td>{{ event.endDate|date('Y-m-d H:i') }}</td>
							</tr>
							<tr>
								<th>Created By (User ID)</th>
								<td>{{ event.user.idUser }}</td>
							</tr>
						</tbody>
					</table>

					<div class="mt-3">
						<a href="{{ path('event_admin_index') }}" class="main-btn dark-btn-outline btn-hover px-4 py-2 me-2">Back to List</a>
						<a href="#" class="main-btn warning-btn-outline btn-hover px-4 py-2 me-2">Edit</a>
						{#<a href="{{ path('event_admin_edit', {'id': event.idEvent}) }}" class="main-btn warning-btn-outline btn-hover px-4 py-2 me-2">Edit</a>#}
						{#{{ include('admin/event_admin/delete_form.html.twig')|raw }}#}
						{{ include('admin/event_admin/delete_formEventAdmin.html.twig')|raw }}

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
