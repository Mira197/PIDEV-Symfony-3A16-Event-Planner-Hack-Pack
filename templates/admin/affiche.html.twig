{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Products{% endblock %}

{% block section %}
<section class="section">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>All Products</h2>
                    </div>
                </div>
            </div>
        </div>
        <!-- ========= card-style-2 start ========= -->
        <div class="row">
            <div class="col-12">
                <div class="title mt-30 mb-30">
            
                    <a href="{{ path('product_add') }}" class="main-btn primary-btn btn-hover">
                        ajouter product
                      </a>
                      <a href="{{ path('affichestock') }}" class="main-btn primary-btn btn-hover">
                        afficher stock
                      </a>
                </div>
                
              </div>
  
              {% for product in products %}
              <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                  <div class="card-style-2 mb-30">
                      <div class="card-image">
                          <a href="#">
                              {% if product.imageUrl %}
                                  <img src="{{ asset(product.imageUrl) }}" alt="{{ product.name }}" />
                              {% else %}
                                  <img src="{{ asset('admin/images/cards/default.jpg') }}" alt="No image" />
                              {% endif %}
                          </a>
                      </div>
                      <div class="card-content">
                          <h4><a href="#">{{ product.name }}</a></h4>
                          <p>{{ product.description|length > 120 ? product.description|slice(0, 120) ~ '...' : product.description }}</p>

                          <div class="mt-3 d-flex justify-content-between">
                            <a href="{{ path('product_edit', {'id': product.product_id}) }}" class="btn btn-warning btn-sm">Edit</a>
                            <form method="post" action="{{ path('product_delete', {'id': product.product_id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.product_id) }}">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                      </div>
                  </div>
              </div>
              {% endfor %}
  
              {% if products is empty %}
                  <p class="text-center">No products available.</p>
              {% endif %}
          
          <!-- end row -->
        </div>
    </section>
    {% endblock %}