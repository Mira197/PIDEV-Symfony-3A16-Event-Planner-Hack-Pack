{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Products{% endblock %}

{% block section %}
<section class="section">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>All Products</h2>
                    </div>
                    

                </div>
            </div>
        </div>
        <!-- ========= card-style-2 start ========= -->
        <div class="row">
            <div class="col-12">
                <div class="title mt-30 mb-30">
            
                    <a href="{{ path('product_add') }}" class="main-btn primary-btn btn-hover">
                        ajouter product
                      </a>
                      <a href="{{ path('affichestock') }}" class="main-btn primary-btn btn-hover">
                        afficher stock
                      </a>
                </div>
                
            <div class="table-responsive">
                <table class="table top-selling-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th><h6 class="text-sm text-medium">Products</h6></th>
                            
                            <th class="min-width"><h6 class="text-sm text-medium">category</h6></th>
                            <th class="min-width"><h6 class="text-sm text-medium">price</h6></th>
                            <th class="min-width"><h6 class="text-sm text-medium">stock</h6></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>
                                    <div class="check-input-primary">
                                        <input class="form-check-input" type="checkbox" id="checkbox-{{ loop.index }}"/>
                                    </div>
                                </td>
                                <td>
                                    <div class="product">
                                        {% set base64 = product.getBase64Image() %}
                    {% if base64 %}
                    <img src="data:image/jpeg;base64,{{ base64 }}" alt="Image"
                    style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px; box-shadow: 0 3px 10px rgba(0,0,0,0.08);">
                                   {% endif %}
                    <p class="text-sm">{{ product.name }}</p>
                                    </div>
                                </td>
                                <td><p class="text-sm">{{ product.category }}</p></td>
                                <td><p class="text-sm">${{ product.price }}</p></td>
                                <td><p class="text-sm">{{ product.stock.stock_id }}</p></td>
                                
                                <td>
                                    <div class="action justify-content-end">
                                        <button class="more-btn ml-10 dropdown-toggle" id="moreAction{{ loop.index }}" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="lni lni-more-alt"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="moreAction{{ loop.index }}">
                                            <li class="dropdown-item">
                                                <a href="{{ path('product_delete', {'id': product.product_id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');" class="text-gray">Remove</a>
                                            </li>
                                            <li class="dropdown-item">
                                                <a href="{{ path('product_edit', {'id': product.product_id}) }}" class="text-gray">Edit</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">
                                    <p class="text-center text-muted">No products available.</p>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
          <!-- end row -->
        </div>
    </section>
    {% endblock %}