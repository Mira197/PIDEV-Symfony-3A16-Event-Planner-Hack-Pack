{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}✏️ Edit Promo Code{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .form-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 16px;
            max-width: 600px;
            margin: 80px auto;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .form-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
            color: #533C56;
        }

        label {
            font-weight: 500;
            color: #444;
            margin-bottom: 5px;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px;
            border: 1px solid #ccc;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #6b336e;
            box-shadow: 0 0 5px rgba(107, 51, 110, 0.3);
        }

        .btn-success {
            background-color: #28a745;
            border: none;
            border-radius: 8px;
            padding: 10px 24px;
            font-weight: bold;
            color: white;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-secondary {
            margin-left: 10px;
            border-radius: 8px;
            padding: 10px 24px;
        }

        .invalid-feedback {
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 5px;
        }
    </style>
{% endblock %}

{% block section %}
    <div class="form-container">
        <h2>✏️ Edit Promo Code</h2>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.codePromo) }}
            {{ form_widget(form.codePromo, {'attr': {'class': 'form-control'}}) }}
            {% for error in form.codePromo.vars.errors %}
                <div class="invalid-feedback d-block">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="mb-3">
            {{ form_label(form.pourcentage) }}
            {{ form_widget(form.pourcentage, {'attr': {'class': 'form-control'}}) }}
            {% for error in form.pourcentage.vars.errors %}
                <div class="invalid-feedback d-block">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="mb-3">
            {{ form_label(form.dateExpiration) }}
            {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control'}}) }}
            {% for error in form.dateExpiration.vars.errors %}
                <div class="invalid-feedback d-block">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">✅ Update</button>
            <a href="{{ path('aya_admin_code_promo_index') }}" class="btn btn-secondary">↩️ Cancel</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
