{% extends 'admin/baseAdmin.html.twig' %}
{% block title %}Location Details{% endblock %}

{% block section %}
<div class="container mt-5">
    <h2 class="mb-4">Location Details</h2>

    <div class="card p-4 shadow-sm">
        <div class="row align-items-center">
            <div class="col-md-4">
                {% if location.imageFilename %}
                    <img src="{{ asset('uploads/' ~ location.imageFilename) }}" alt="{{ location.name }}" class="img-fluid rounded">
                {% else %}
                    <p>No image available</p>
                {% endif %}
            </div>
            <div class="col-md-8">
                <table class="table ">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ location.name }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ location.city.value }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ location.address }}</td>
                        </tr>
                        <tr>
                            <th>Capacity</th>
                            <td>{{ location.capacity }}</td>
                        </tr>
                        <tr>
                            <th>Dimension</th>
                            <td>{{ location.dimension }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ location.price }} DT</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ location.status }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="{{ path('location_admin') }}" class="main-btn dark-btn-outline btn-hover px-4 py-2 me-2">Back to List</a>
                    <a href="{{ path('location_admin_edit', {'id': location.idLocation}) }}" class="main-btn warning-btn-outline btn-hover px-4 py-2 me-2">Edit</a>
                    {{ include('admin/location_admin/delete_form.html.twig')|raw  }}


                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
