<form method="post" action="{{ path('location_admin_delete', {'id': location.idLocation}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this location?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.idLocation) }}">
    <button class="main-btn danger-btn-outline btn-hover px-4 py-2">Delete</button>
</form>
