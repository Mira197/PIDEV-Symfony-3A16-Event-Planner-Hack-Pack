{% extends 'admin/baseAdmin.html.twig' %}

{% block section %}
<section class="section">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>Manage Locations</h2>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <a href="{{ path('location_admin_new') }}" class="main-btn success-btn-outline btn-hover px-4 py-2">Add a location</a>
                </div>
            </div>
        </div>
        
        {# ðŸ‘‰ INSERT SEARCH FORM HERE #}
<div class="row mt-3">
    <div class="col-md-6 offset-md-3">
        <form action="{{ path('location_admin_search') }}" method="get" class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Search location..." value="{{ query|default('') }}">
            <button class="btn btn-outline-primary" type="submit">
                <i class="lni lni-search-alt"></i>
            </button>
        </form>
    </div>
</div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card-style mb-30">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Image</th> {# âœ… Ajout de la colonne #}
                                <th>Name</th>
                                <th>City</th>
                                <th>Address</th>
                                <th>Capacity</th>
                                <th>Dimension</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for location in locations %}
                            <tr>

                                {# âœ… Affichage de lâ€™image si elle existe #}
                                <td>
                                    {% if location.imageFilename %}
                                        <img src="{{ asset('uploads/' ~ location.imageFilename) }}"
                                             alt="{{ location.name }}"
                                             width="100" height="80" style="object-fit: cover; border-radius: 5px;" />
                                    {% else %}
                                        <span class="text-muted">Aucune image</span>
                                    {% endif %}
                                </td>

                                <td>{{ location.name }}</td>
                                <td>{{ location.city.value }}</td>
                                <td>{{ location.address }}</td>
                                <td>{{ location.capacity }}</td>
                                <td>{{ location.dimension }}</td>
                                <td>{{ location.price }}DT</td>
                                <td>{{ location.status }}</td>
                                <td>
                                    <a href="{{ path('location_admin_show', {'id': location.idLocation}) }}" class="main-btn secondary-btn-outline btn-hover px-4 py-2">Show</a>
                                    <a href="{{ path('location_admin_edit', {'id': location.idLocation}) }}" class="main-btn warning-btn-outline btn-hover px-4 py-2">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">No Location Found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
