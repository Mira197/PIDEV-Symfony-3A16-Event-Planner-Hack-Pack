{% extends 'admin/baseAdmin.html.twig' %}

{% block section %}
<section class="section">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>Manage Locations</h2>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <a href="{{ path('location_admin_new') }}" class="btn btn-success">Add a location</a>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card-style mb-30">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Image</th> {# ✅ Ajout de la colonne #}
                                <th>Name</th>
                                <th>City</th>
                                <th>Address</th>
                                <th>Capacity</th>
                                <th>Dimension</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for location in locations %}
                            <tr>

                                {# ✅ Affichage de l’image si elle existe #}
                                <td>
                                    {% if location.imageFilename %}
                                        <img src="{{ asset('uploads/' ~ location.imageFilename) }}"
                                             alt="{{ location.name }}"
                                             width="100" height="80" style="object-fit: cover; border-radius: 5px;" />
                                    {% else %}
                                        <span class="text-muted">Aucune image</span>
                                    {% endif %}
                                </td>

                                <td>{{ location.name }}</td>
                                <td>{{ location.city.value }}</td>
                                <td>{{ location.address }}</td>
                                <td>{{ location.capacity }}</td>
                                <td>{{ location.dimension }}</td>
                                <td>{{ location.price }}DT</td>
                                <td>{{ location.status }}</td>
                                <td>
                                    <a href="{{ path('location_admin_show', {'id': location.idLocation}) }}" class="btn btn-sm btn-primary">Show</a>
                                    <a href="{{ path('location_admin_edit', {'id': location.idLocation}) }}" class="btn btn-warning">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">No Location Found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
