{% extends 'admin/base.html.twig' %}

{% block title %}Mon Profil
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
	<style>
		body {
			background: rgb(99, 39, 120);
		}

		.form-control:focus {
			box-shadow: none;
			border-color: #BA68C8;
		}

		.profile-button {
			background: rgb(99, 39, 120);
			color: white;
			box-shadow: none;
			border: none;
		}

		.profile-button:hover,
		.profile-button:focus,
		.profile-button:active {
			background: #682773;
			color: white;
			box-shadow: none;
		}

		.back:hover {
			color: #682773;
			cursor: pointer;
		}

		.labels {
			font-size: 11px;
		}

		.add-experience:hover {
			background: #BA68C8;
			color: #fff;
			cursor: pointer;
			border: solid 1px #BA68C8;
		}
	</style>
{% endblock %}

{% block section %}
	<div class="container rounded bg-white mt-5 mb-5">
		<div
			class="row">
			<!-- Colonne gauche avec image et infos -->
			<div class="col-md-3 border-right">
				<div class="d-flex flex-column align-items-center text-center p-3 py-5">
					<img class="rounded-circle mt-5" src="{{ asset('uploads/profile_images/' ~ app.session.get('img')) }}" alt="Profile image" width="150px">
					<span class="font-weight-bold">{{ app.session.get('username') }}</span>
					<span class="text-black-50">{{ app.session.get('email') }}</span>
					<div class="d-flex justify-content-center mt-2">
						<form action="{{ path('change_profile_picture') }}" method="POST" enctype="multipart/form-data">
							<label class="main-btn primary-btn btn-hover" style="font-weight: 300; width: 120px; cursor: pointer;">
								<i class="lni lni-camera me-2"></i>
								Upload
								<input type="file" name="profile_image" accept="image/*" style="display: none;" onchange="this.form.submit();">
							</label>
						</form>
					</div>


				</div>
			</div>

			<!-- Colonne centrale avec les inputs -->
			<div class="col-md-5 border-right">
				<div class="p-3 py-5">
					<div class="d-flex justify-content-between align-items-center mb-3">
						<h4 class="text-right">Profile Settings</h4>
					</div>
					<div class="row mt-2">
						<div class="col-md-6">
							<label class="labels">First Name</label>
							<input type="text" class="form-control" placeholder="{{ app.session.get('first_name') }}">
						</div>
						<div class="col-md-6">
							<label class="labels">Last Name</label>
							<input type="text" class="form-control" placeholder="{{ app.session.get('last_name') }}">
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-md-12">
							<label class="labels">Mobile Number</label>
							<input type="text" class="form-control" placeholder="{{ app.session.get('phone') }}">
						</div>
						<div class="col-md-12">
							<label class="labels">Email</label>
							<input type="text" class="form-control" placeholder="{{ app.session.get('email') }}">
						</div>
					</div>
				</div>
			</div>

			<!-- Colonne droite avec le bouton -->
			<div class="col-md-4">
				<div class="p-3 py-5 d-flex align-items-center justify-content-center h-100">
					<a href="{{ path('user_change_password') }}" class="main-btn primary-btn btn-hover w-100" style="font-weight: 600;">
						<i class="lni lni-lock-alt me-2"></i>
						Reset Password
					</a>


				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
