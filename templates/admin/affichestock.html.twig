{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Stocks{% endblock %}

{% block section %}
<section class="section">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>All Stocks</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="tables-wrapper">
            <div class="row">
              <div class="col-lg-12">
                <div class="card-style mb-30">
                  <h6 class="mb-10">Stock Table</h6>
                  
                  <a href="{{ path('stock_add') }}" class="main-btn primary-btn btn-hover">
                    ajouter stock
                  </a>
      
                  <div class="table-wrapper table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th><h6>Reference</h6></th>
                          <th><h6>Available Quantity</h6></th>
                          <th><h6>Minimum Quantity</h6></th>
                          <th><h6>Last Update</h6></th>
                          
                          <th><h6>Edit</h6></th>
                          <th><h6>Delete</h6></th>

                        </tr>
                      </thead>
                      <tbody>
                        {% for stock in stocks %}
                        <tr>
                          <td>{{ stock.stock_id }}</td>
                          <td>{{ stock.available_quantity }}</td>
                          <td>{{ stock.minimum_quantity }}</td>
                          <td>{{ stock.last_update ? stock.last_update|date('Y-m-d H:i') : 'â€”' }}</td>
                          <td>
                            
                              <a href="{{ path('stock_edit', {id: stock.stock_id}) }}" class="btn btn-warning btn-sm me-2">
                                <i class="lni lni-pencil"></i>
                              </a></td>
                              <td> <form method="post" action="{{ path('stock_delete', {id: stock.stock_id}) }}"
                                    onsubmit="return confirm('Are you sure you want to delete this stock?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.stock_id) }}">
                                <button class="btn btn-danger btn-sm">
                                  <i class="lni lni-trash-can"></i>
                                </button>
                              </form>
                              </td>
                            
                          
                          
                        </tr>
                        {% else %}
                          <tr>
                            <td colspan="6" class="text-center">No stock entries found.</td>
                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      {% endblock %}