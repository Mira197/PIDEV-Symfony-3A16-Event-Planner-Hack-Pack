<form method="post"
      action="{{ path('booking_delete', {'id': booking.idBooking}) }}"
      style="display:inline;"
      onsubmit="return confirm('Are you sure you want to delete this booking?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.idBooking) }}">
    <button class="action-btn delete" title="Delete"><i class="fa-solid fa-trash"style="font-size: 14px;color: #cebec9;"></i></button>
</form>
