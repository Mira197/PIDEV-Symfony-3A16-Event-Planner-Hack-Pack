{% extends 'base.html.twig' %}
{% block title %}Add FrameVR Link{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	
	<style>
		nav.fh5co-nav {
			background-color: #cebec9 !important;
			padding: 1px 0 !important;
			max-height: 170px !important;
		}
		.aya-cart-wrapper {
			padding: 30px;
			margin-top: 120px;
		}
	</style>
{% endblock %}
{% block content %}
<div class="aya-cart-wrapper container mt-5">
    <h2>Add FrameVR Link for "{{ event.name }}"</h2>

    <form method="post" class="mt-3">
        <div class="mb-3">
            <label for="frameVrLink" class="form-label">FrameVR URL</label>
            <input type="url" name="frameVrLink" id="frameVrLink" class="form-control" required placeholder="https://framevr.io/ma-scene">
        </div>
        <button type="submit" class="btn btn-primary">Save Link</button>
    </form>
</div>
{% endblock %}
